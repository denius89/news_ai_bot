# PulseAI Bot Configuration
# Скопируйте этот файл в .env и заполните ваши значения

# === ОСНОВНЫЕ НАСТРОЙКИ ===
APP_ENV=dev
DEBUG=1
TZ=Europe/Warsaw
VERSION=0.1.0

# === WEBAPP ===
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=8001
WEBAPP_URL=https://your-domain.com

# === БАЗА ДАННЫХ ===
# Пример: postgres://user:pass@host:5432/dbname
DATABASE_URL=sqlite:///news_ai_bot.sqlite3

# === SUPABASE ===
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# === ВНЕШНИЕ API ===
OPENAI_API_KEY=your_openai_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# === AI НАСТРОЙКИ ===
AI_MODEL_SUMMARY=gpt-4o-mini
AI_MODEL_SCORING=gpt-4o-mini
AI_MAX_TOKENS=800

# === REACTOR CORE ===
# Включает/выключает реактивную систему событий
REACTOR_ENABLED=true

# Путь для WebSocket подключений
REACTOR_WS_PATH=/ws/stream

# Путь к лог-файлу Reactor
REACTOR_LOG_PATH=logs/reactor.log

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
# Добавьте здесь другие переменные окружения по мере необходимости
